{
  "name": "radix-wallet",
  "version": "2.0.0-beta.4",
  "description": "",
  "main": "build/main.js",
  "scripts": {
    "build:main": "webpack --config webpack.main.config.dev.js --progress",
    "build:main:watch": "webpack --config webpack.main.config.dev.js --watch --progress",
    "build:main:prod": "webpack --config webpack.main.config.prod.js --progress",
    "build:app": "webpack --config webpack.app.config.dev.js --progress",
    "build:app:watch": "webpack --config webpack.app.config.dev.js --watch --progress",
    "build:app:prod": "webpack --config webpack.app.config.prod.js --progress",
    "build:unit": "webpack --config webpack.unit.config.js --progress",
    "build:unit:watch": "webpack --config webpack.unit.config.js --watch --progress",
    "build": "run-p build:main build:app build:unit",
    "build:watch": "run-p build:main:watch build:app:watch build:unit:watch",
    "watch": "run-p build:main:watch build:app:watch build:unit:watch",
    "build:prod": "run-p build:main:prod build:app:prod",
    "lint": "tslint -p ./tsconfig.json -c ./tslint.json 'src/**/*.{ts,tsx}'",
    "lint:fix": "npm run lint -- --fix",
    "coverage": "nyc --reporter=lcov mocha test/out/app.js --exit",
    "test:unit": "electron-mocha --renderer test/out/app.js",
    "test:e2e": "mocha test/e2e/index.js",
    "start": "electron .",
    "pack": "electron-builder --dir --config electron-builder.yml",
    "postinstall_DISABLED": "electron-rebuild -f && run-p addbindings",
    "addbindings": "cp node_modules/node-hid/build/Release/HID-hidraw.node build && cp node_modules/usb/build/Release/usb_bindings.node build",
    "package:linux": "electron-packager . RadixWallet --platform=linux --overwrite",
    "package:windows": "electron-packager . RadixWallet --platform=win32 --overwrite",
    "package:mac": "electron-packager . RadixWallet --platform=darwin --overwrite"
  },
  "author": "Radix DLT",
  "license": "Apache-2.0",
